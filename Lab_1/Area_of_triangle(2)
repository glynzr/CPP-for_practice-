#include <iostream>
#include <cmath>
#include <cstdio>
using namespace std;
int main(){
   float x1,y1,x2,y2,x3,y3,S;
   cout<< "x1,y1=";
   cin>> x1 >> y1;

   cout<< "x2,y2=";
   cin>> x2 >> y2;

   cout<< "x3,y3=";
   cin>> x3 >> y3;

   S=abs(x1*(y2-y3)+x2*(y3-y1)+x3*(y1-y2))/2;
   printf("Area of the triangle:%.2f \n",S);
   return 0;

   
}
